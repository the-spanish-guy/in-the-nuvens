{
  "name": "nuvem",
  "version": "1.0.0",
  "description": "boilerplate Express + TypeScript",
  "main": "index.js",
  "repository": "https://github.com/the-spanish-guy/boilerplates/tree/main/ts-express",
  "author": "Luis Enrique Meza Paredes",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "build": "sucrase ./src -d ./dist --transforms typescript,imports && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "commit": "git-cz",
    "lint-staged": "lint-staged",
    "test": "jest -c ./jest.config.ts",
    "test:coverage": "jest -c ./jest.config.ts --coverage"
  },
  "lint-staged": {
    "src/**/*.ts": "prettier --write 'src/**/*.ts'",
    "*.{js,jsx,ts,md}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "private": false,
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@faker-js/faker": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/faker": "^6.6.9",
    "@types/jest": "^29.2.5",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "commitizen": "^4.2.6",
    "commitlint-config-gitmoji": "^2.2.9",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "mongodb-memory-server": "^8.11.0",
    "prettier": "^2.8.2",
    "sucrase": "^3.29.0",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "tscpaths": "^0.0.9",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "dependencies": {
    "axios": "^1.2.2",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^14.3.2",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "mongoose": "^6.8.3"
  }
}
